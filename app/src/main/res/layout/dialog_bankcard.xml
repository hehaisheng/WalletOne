<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:background="@drawable/btn_white_normal_bg"
        android:orientation="vertical"
        android:layout_margin="20dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ly_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_margin="13dp"
                    android:src="@mipmap/close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:text="选择银行卡"
                android:textColor="@color/tvtitle"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_bg"/>

        <LinearLayout
            android:id="@+id/ly_bankselect1"
            android:paddingTop="12dp"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:paddingBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_bankname1"
                android:text=""
                android:textSize="14sp"
                android:textColor="@color/tvtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="1dp"/>

            <TextView
                android:id="@+id/tv_bankcardnum1"
                android:textSize="14sp"
                android:textColor="@color/tvtitle"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:background="@color/line_bg"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:id="@+id/ly_bankselect2"
            android:paddingTop="12dp"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:paddingBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_bankname2"
                android:text=""
                android:textSize="14sp"
                android:textColor="@color/tvtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="1dp"/>

            <TextView
                android:id="@+id/tv_bankcardnum2"
                android:textSize="14sp"
                android:textColor="@color/tvtitle"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:background="@color/line_bg"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:id="@+id/ly_bankselect3"
            android:paddingTop="12dp"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:paddingBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_bankname3"
                android:text=""
                android:textSize="14sp"
                android:textColor="@color/tvtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="1dp"/>

            <TextView
                android:id="@+id/tv_bankcardnum3"
                android:textSize="14sp"
                android:textColor="@color/tvtitle"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>